# GRM Integration Environment Configuration
# Copy this file to .env and customize with your actual values

############################
# GRM MYSQL DATABASE CONFIGURATION
############################

# GRM MySQL Database Connection
GRM_MYSQL_HOST=localhost
GRM_MYSQL_DB=grm_database
GRM_MYSQL_USER=grm_user
GRM_MYSQL_PASSWORD=your_grm_password_here
GRM_MYSQL_PORT=3306

############################
# GRM INTEGRATION SETTINGS
############################

# Enable/disable GRM integration
GRM_INTEGRATION_ENABLED=true

# Synchronization settings
GRM_SYNC_INTERVAL_MINUTES=5
GRM_AUTO_SYNC_GRIEVANCES=true
GRM_SYNC_STATUS_UPDATES=true
GRM_RETRY_FAILED_SYNCS=true
GRM_MAX_RETRY_ATTEMPTS=3
GRM_RETRY_DELAY_SECONDS=30

############################
# SSH TUNNEL CONFIGURATION (Optional)
############################

# Enable SSH tunnel for secure remote connection
GRM_SSH_TUNNEL_ENABLED=false

# SSH connection details
GRM_SSH_HOST=your_grm_server_ip
GRM_SSH_PORT=22
GRM_SSH_USER=your_ssh_username

# SSH Authentication (choose one method)
# Option 1: SSH Key authentication (recommended)
GRM_SSH_KEY_PATH=/path/to/your/private/key

# Option 2: Password authentication (less secure)
# GRM_SSH_PASSWORD=your_ssh_password

# SSH tunnel port mapping
GRM_LOCAL_BIND_PORT=3307
GRM_REMOTE_BIND_PORT=3306

############################
# CONNECTION EXAMPLES
############################

# Example 1: Direct connection to GRM server on same network
# GRM_MYSQL_HOST=192.168.1.100
# GRM_MYSQL_DB=grievance_system
# GRM_MYSQL_USER=grm_admin
# GRM_MYSQL_PASSWORD=secure_password123

# Example 2: Connection via SSH tunnel to remote server
# GRM_SSH_TUNNEL_ENABLED=true
# GRM_SSH_HOST=203.0.113.10
# GRM_SSH_USER=admin
# GRM_SSH_KEY_PATH=/home/user/.ssh/grm_key
# GRM_MYSQL_HOST=localhost  # Will connect through tunnel
# GRM_MYSQL_DB=grm_production
# GRM_MYSQL_USER=grm_user
# GRM_MYSQL_PASSWORD=db_password

# Example 3: Local development with localhost
# GRM_MYSQL_HOST=localhost
# GRM_MYSQL_DB=grm_dev
# GRM_MYSQL_USER=root
# GRM_MYSQL_PASSWORD=
# GRM_MYSQL_PORT=3306

############################
# SECURITY NOTES
############################

# 1. Never commit passwords or sensitive data to version control
# 2. Use SSH keys instead of passwords when possible
# 3. Ensure database user has minimal required permissions
# 4. Consider using environment-specific configuration files
# 5. Regularly rotate passwords and keys

############################
# TROUBLESHOOTING
############################

# If connection fails:
# 1. Verify MySQL server is running and accessible
# 2. Check firewall settings and port accessibility
# 3. Verify database credentials and permissions
# 4. For SSH tunnel: ensure SSH key permissions are correct (600)
# 5. Check MySQL user has proper permissions for the database

# Common MySQL permissions needed:
# GRANT SELECT, INSERT, UPDATE, DELETE ON grm_database.* TO 'grm_user'@'%';
# FLUSH PRIVILEGES; 